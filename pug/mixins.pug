mixin tourItem(image, price, title, review, reviewCount, duration, tourPrice)
  .tour
    .tour-top
      img.tour-image(src= image, alt="bali")
      span.tour-price= price
    .tour-content
      h3.tour-title= title
      .tour-rating
        .tour-review
          .tour-star
            img(src="./images/star.png", alt="tour-rating")
          .tour-review-count
            span #{review} (#{reviewCount} reviews)
        span.tour-duration Duration: #{duration} hours
      a.tour-button(href="#", target="_blank", rel="noopener noreferrer") Tours Price $#{tourPrice}

mixin popularItem()
  .popular-item
    .popular-image
      .popular-overlay
      img.popular-img(src="https://images.unsplash.com/photo-1717889887785-f0528abb55c6?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHx0b3BpYy1mZWVkfDM1fEZ6bzN6dU9ITjZ3fHxlbnwwfHx8fHw%3D", alt="")
      span.popular-laber Must See
    .popular-content
      span.popular-time Sep 28 10:00 AM - 1:00 PM
      h3.popular-title The Grand Palace
      .popular-review
        img(src="./images/star.png", alt="tour-rating")
        span 4.8 (12 reviews)

